#!/bin/bash
# Volume display script for Polybar
# Place in: ~/.config/i3/scripts/volume-click

# Get volume percentage and mute status
volume=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po '\d+(?=%)' | head -1)
muted=$(pactl get-sink-mute @DEFAULT_SINK@ | grep -o 'yes')

if [ "$muted" == "yes" ]; then
    echo "Muted"
else
    echo "$volume%"
fi

